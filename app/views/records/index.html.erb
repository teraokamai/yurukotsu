<% if @records.length != 0 %>
<table border="1" style="border-color: black;">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @records.each do |record| %>
  <tr>
    <td><%= record.do_on %></td>
    <td><%= record.start_at %></td>
    <td><%= link_to '詳細', record_path(task) %></td>
    <td><%= link_to '編集', edit_record_path(record) %></td>
