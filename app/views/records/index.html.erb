<div class="back">
  <%= render 'shared/header' %>
  <div class="container">
    <!-- 時間表示 -->
    <div class="time">
      <div class="time-content">
        <div class="time-header">本日の合計</div>
        <p>０３時間３０分</p>
      </div>
      <div class="time-content">
        <div class="time-header">今週の合計</div>
        <p>１３時間４０分</p>
      </div>
      <div class="time-content">
        <div class="time-header">今までの合計</div>
        <p>３５時間２０分</p>
      </div>
    </div>
    <% if @records.length != 0 %>
    <table border="1" style="border-color: black">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @records.each do |record| %>
      <tr>
        <td><%= record.do_on %></td>
        <td><%= record.start_at %></td>
        <td><%= link_to '詳細', record_path(record) %></td>
        <td><%= link_to '編集', edit_record_path(record) %></td>
        <td><%= link_to '削除', record_path(record), method: :delete %></td>
      </tr>
      <% end %>
    </table>
    <% else %>
    <p>NO TASK</p>
    <% end %>
    <p><%= link_to 'ToDoの作成', new_record_path %></p>
    <div class="ui top attached tabular menu">
      <a class="active item">
        本日
      </a>
      <!-- <a class="item">
        全て
      </a> -->
        <div class="right menu category-select">
          <button class="ui teal button">記録する</button>
          <select class="ui selection dropdown">
            <option value="">全て</option>
            <option value="1">読書</option>
            <option value="0">秘書検定</option>
          </select>
        </div>
    </div>
    <div class="ui bottom attached segment">
      <p>        
        <table class="ui fixed table">
          <thead>
            <tr>
              <th width="98px">日付</th>
              <th width="114px">時間</th>
              <th>内容</th>
              <th width="74px">合計</th>
              <th width="169px"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>2020/09/05</td>
              <td>09:00 〜 10:30</td>
              <td>読書</td>
              <td>01h30m</td>
              <td><button class="ui teal button">編集</button><button class="ui red button">削除</button></td>
            </tr>
            <tr>
              <td>2020/09/05</td>
              <td>13:00 〜 14:30</td>
              <td>マネー講座</td>
              <td>01h30m</td>
              <td><button class="ui teal button">編集</button><button class="ui red button">削除</button></td>
            </tr>
            <tr>
              <td>2020/09/05</td>
              <td>16:00 〜 17:00</td>
              <td>秘書検定の勉強</td>
              <td>01h00m</td>
              <td><button class="ui teal button">編集</button><button class="ui red button">削除</button></td>
            </tr>
          </tbody>
        </table>
        <!-- ページネーション -->
        <div class="ui pagination menu">
          <a class="active item">
            1
          </a>
          <div class="disabled item">
            ...
          </div>
          <a class="item">
            10
          </a>
          <a class="item">
            11
          </a>
          <a class="item">
            12
          </a>
        </div>
      </p>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
