<h1>Categories#new</h1>
<% if @category.errors.any? %>
<ul>
  <% @category.errors.full_messages.each do |err| %>
    <li><%= err %></li>
  <% end %>
</ul>
<% end %>
<%= form_for(@category, url:{controller: 'bloggenres', action: 'add'}) do |form| %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= form.text_field :name, {class:"form-control"} %>
  </div>
  <%= form.hidden_field :account_id, {value: @category.account_id} %>
  <%= form.submit "作成" %>
<% end %>