<div class="back">
  <%= render 'shared/header' %>
  <div class="container">
    <% if @category.errors.any? %>
    <ul>
      <% @category.errors.full_messages.each do |err| %>
      <li><%= err %></li>
      <% end %>
    </ul>
    <% end %> <%= render 'form', category: @category %>
    <p><%= link_to '一覧に戻る', categories_url %></p>
  </div>
  <%= render 'shared/footer' %>
</div>
