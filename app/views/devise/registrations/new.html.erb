<div class="back">
  <%= render 'shared/header' %>
  <div class="container">
    <div class="box">
      <h1>新規登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field box-username">
          <%= f.label :username ,'ユーザー名'%>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "username" %>
        </div>

        <div class="field">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address"  %>
        </div>

        <div class="field box-password">
          <%= f.label :password ,'パスワード(6文字以上)' %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "password"  %>
        </div>

        <div class="field box-passwordconfirm">
          <%= f.label :password_confirmation, 'パスワード確認' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" %>
        </div>

        <div class="box-regist"><%= f.submit "新規登録", { class: 'ui yellow-button button login' }  %></div>
        
        <div class="box-login">
          <p><span>登録完了している方はこちら</span></p>
          <%= link_to "ログイン", new_account_session_path %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
