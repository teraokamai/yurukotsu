<div class="back">
  <%= render 'shared/header' %>
  <div class="container">
    <div class="box">
      <h2>マイデータ更新</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form"}) do |f| %> 
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username, 'ユーザー名' %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
      <% end %>

      <div class="field">
        <%= f.label :password, '現在のパスワード' %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, '新しいパスワード(6文字以上)' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, '新しいパスワード(確認)' %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions"><%= f.submit "更新", { class: 'ui yellow button login' }  %></div>
      <% end %>
      <%= link_to accounts_path do %>
        <i class="angle double left icon"></i>マイページに戻る
      <% end %>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
